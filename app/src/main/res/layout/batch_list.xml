<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/batch_linear_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="1dp"
    android:background="@drawable/list_background"
    android:orientation="vertical">

    <TextView
        android:id="@+id/text_venue_name"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="Venue:  Addis Ababa Head Office"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="@color/design_default_color_primary_dark" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text_created"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Created: 20/04/2020"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textColor="@color/jumbo" />

        <TextView
            android:id="@+id/text_no_of_donation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="27"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textColor="@color/jumbo" />
    </LinearLayout>

</LinearLayout>
