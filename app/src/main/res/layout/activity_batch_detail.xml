<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/lostb"
            android:orientation="vertical"
            android:padding="5dp">

            <LinearLayout
                android:id="@+id/batch_linear_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/lostb"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingLeft="5dp"
                android:paddingTop="5dp"
                android:paddingRight="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/text_created"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Created: 20/04/2020"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                        android:textColor="@color/monsoon" />

                    <TextView
                        android:id="@+id/text_number_of_result"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Number of Donation(S): 27"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                        android:textColor="@color/monsoon" />
                </LinearLayout>

                <TextView
                    android:id="@+id/text_venue_name"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="Venue:  Addis Ababa Head Office"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    android:textColor="@color/oil" />

            </LinearLayout>

            <Button
                android:id="@+id/add_donation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="5dp"
                android:background="@android:drawable/screen_background_light_transparent"
                android:text="@string/add_donation"
                android:textColor="@color/design_default_color_primary" />

        </LinearLayout>


        <android.support.v7.widget.RecyclerView
            android:id="@+id/donation_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />


    </LinearLayout>
</ScrollView>